<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentGray"
    tools:context=".ui.board_screen.BoardFragment">

    <ImageView
        android:id="@+id/board_city_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/img_desc_board_game"
        android:src="@drawable/tower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/board_player_in_city_image_view"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:contentDescription="@string/img_desc_card_fighter"
        android:src="@drawable/ant_man"
        app:layout_constraintBottom_toBottomOf="@+id/board_city_image_view"
        app:layout_constraintEnd_toEndOf="@+id/board_city_image_view"
        app:layout_constraintStart_toStartOf="@+id/board_city_image_view"
        app:layout_constraintTop_toTopOf="@+id/board_city_image_view" />

    <ImageView
        android:id="@+id/board_player1_card_image_view"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/img_desc_card_fighter"
        android:src="@drawable/ant_man"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/board_player1_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/ant_man"
        app:layout_constraintBottom_toTopOf="@+id/board_player1_stats_view"
        app:layout_constraintEnd_toEndOf="@+id/board_player1_stats_view"
        app:layout_constraintStart_toStartOf="@+id/board_player1_stats_view" />

    <fr.learnandrun.kingofheroes.ui.view.StatsView
        android:id="@+id/board_player1_stats_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/board_player1_card_image_view"
        app:layout_constraintStart_toEndOf="@+id/board_player1_card_image_view"
        app:layout_constraintTop_toTopOf="@+id/board_player1_card_image_view" />

    <ImageView
        android:id="@+id/board_player2_card_image_view"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/img_desc_card_fighter"
        android:src="@drawable/ant_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/board_player2_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/ant_man"
        app:layout_constraintBottom_toTopOf="@+id/board_player2_stats_view"
        app:layout_constraintEnd_toEndOf="@+id/board_player2_stats_view"
        app:layout_constraintStart_toStartOf="@+id/board_player2_stats_view" />

    <fr.learnandrun.kingofheroes.ui.view.StatsView
        android:id="@+id/board_player2_stats_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/board_player2_card_image_view"
        app:layout_constraintEnd_toStartOf="@+id/board_player2_card_image_view"
        app:layout_constraintTop_toTopOf="@+id/board_player2_card_image_view" />

    <ImageView
        android:id="@+id/board_player3_card_image_view"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/img_desc_card_fighter"
        android:src="@drawable/ant_man"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <fr.learnandrun.kingofheroes.ui.view.StatsView
        android:id="@+id/board_player3_stats_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/board_player3_card_image_view"
        app:layout_constraintEnd_toStartOf="@+id/board_player3_card_image_view"
        app:layout_constraintTop_toTopOf="@+id/board_player3_card_image_view" />

    <TextView
        android:id="@+id/board_player3_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/ant_man"
        app:layout_constraintBottom_toTopOf="@+id/board_player3_stats_view"
        app:layout_constraintEnd_toEndOf="@+id/board_player3_stats_view"
        app:layout_constraintStart_toStartOf="@+id/board_player3_stats_view" />

    <ImageView
        android:id="@+id/board_player4_card_image_view"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/img_desc_card_fighter"
        android:src="@drawable/ant_man"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/board_player4_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/ant_man"
        app:layout_constraintBottom_toTopOf="@+id/board_player4_stats_view"
        app:layout_constraintEnd_toEndOf="@+id/board_player4_stats_view"
        app:layout_constraintStart_toEndOf="@+id/board_player4_card_image_view"
        app:layout_constraintStart_toStartOf="@+id/board_player4_stats_view" />

    <fr.learnandrun.kingofheroes.ui.view.StatsView
        android:id="@+id/board_player4_stats_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/board_player4_card_image_view"
        app:layout_constraintStart_toEndOf="@+id/board_player4_card_image_view"
        app:layout_constraintTop_toTopOf="@+id/board_player4_card_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>